@{
    ViewData["Title"] = "Home Page";
}

<div>
    <form method="post" action="@Url.Action("Answer","Home")">
    <fieldset>
        <legend><i>Contact Information</i></legend>
        First name: <input type="text" id="fname" name="fname"> <br>
        Last name: <input type="text" id="lname" name="lname"><br>
        Email: <input type="text" id="email" name="email">
    </fieldset>

    <fieldset>
        <legend><i>Competition Question</i></legend>
        How tall is the Eiffel Tower in Parism France? <br>
        <input type="radio" id="ans" name="ans" value="584ft"> 584ft <br>
        <input type="radio" id="ans" name="ans" value="784ft"> 784ft <br>
        <input type="radio" id="ans" name="ans" value="984ft"> 984ft <br>
        <input type="radio" id="ans" name="ans" value="1184ft"> 1184ft <br>
    </fieldset>

    <fieldset>
        <legend><i>Tiebreaker Question</i></legend>
        In 25 words or less, say why you would like to win $10,000: <br>
        <textarea type="text" id="textarea" name="textarea"></textarea>
    </fieldset>
    <fieldset>
        <legend><i>Enter competition</i></legend>
        <input type="submit" value="Enter Competition">
    </fieldset>
    </form>
</div>
